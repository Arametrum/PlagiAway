WindowManager:
	MainWindow:
	ModeSelectWindow:
	ParSusWindow:
	ParCompWindow:
	PlainSusWindow:
	PlainCompWindow:
	ParFileResultsWindow:
	PlainResultsWindow:
	ParSingleResultsWindow:
	ParMatchedStringsWindow:
	PlainMatchedStringsWindow:

<MainWindow>:
	name: "main"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "PlagiAway"
			font_size: 32
			
		Button:
			text: "START"
			on_release: app.root.current = "modeSel"

<ModeSelectWindow>:
	name: "modeSel"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Choose mode"
			font_size: 32

		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "PLAIN"
				on_release: 
					root.plain()
					app.root.current = "plainSus"

			Button:
				text: "PARAGRAPH"
				on_release: 
					root.par()
					app.root.current = "parSus"

<ParSusWindow>:
	name: "parSus"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Drag your file onto the input field"

		BoxLayout:
			orientation: "horizontal"

			Label:
				text: "Suspect file"

			TextInput:
				id: parSusFile

		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "SELECT"
				on_release: 
					root.select()
					app.root.current = "parComp"

			Button:
				text: "RETURN"
				on_release: app.root.current = "modeSel"

<ParCompWindow>:
	name: "parComp"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Drag your file onto the input field"

		BoxLayout:
			orientation: "horizontal"

			Label:
				text: "Comparison file"

			TextInput:
				id: parCompFile

		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "SELECT"
				on_release: 
					root.select()
					app.root.current = "parFileRes"

			Button:
				text: "RETURN"
				on_release: app.root.current = "parSus"

<PlainSusWindow>:
	name: "plainSus"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Drag your file onto the input field"

		BoxLayout:
			orientation: "horizontal"

			Label:
				text: "Suspect file"

			TextInput:
				id: plainSusFile


		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "SELECT"
				on_release: 
					root.select()
					app.root.current = "plainComp"

			Button:
				text: "RETURN"
				on_release: app.root.current = "modeSel"

<PlainCompWindow>:
	name: "plainComp"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Drag your file onto the input field"

		BoxLayout:
			orientation: "horizontal"

			Label:
				text: "Comparison file"

			TextInput:
				id: plainCompFile


		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "SELECT"
				on_release: 
					root.select()
					app.root.current = "plainRes"

			Button:
				text: "RETURN"
				on_release: app.root.current = "plainSus"

<ParFileResultsWindow>:
	name: "parFileRes"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Aggregated comparison results"

		GridLayout:
			cols: 2
			rows: 3

			Label:
				text: "Average overlap"
			Label:
				text: "val"
			Label:
				text: "Highest overlap"
			Label:
				text: "val"

			Button:
				text: "DETAILS"
				on_release: app.root.current = "parSingleRes"

			Button:
				text: "BACK TO MENU"
				on_release: app.root.current = "main"


<PlainResultsWindow>:
	name: "plainRes"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Aggregated comparison results"

		GridLayout:
			cols: 2
			rows: 3

			Label:
				text: "Average overlap"
			Label:
				text: "val"
			Label:
				text: "Highest overlap"
			Label:
				text: "val"

			Button:
				text: "DETAILS"
				on_release: app.root.current = "plainString"

			Button:
				text: "BACK TO MENU"
				on_release: app.root.current = "main"

<ParSingleResultsWindow>:
	name: "parSingleRes"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Button:
			text: "RETURN"
			on_release: app.root.current = "parFileRes"

<ParMatchedStringsWindow>:
	name: "parString"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Possible matches"

		ScrollView:
			bar_width: 6
			bar_color: [0.5, 0.5, 0.2, 0.7]

			BoxLayout:
				orientation: "vertical"
				size_hint_y: None
				size_hint_x: 1

				height: self.minimum_height

		Button:
			text: "RETURN"
			on_release: app.root.current = "parSingleRes"

<PlainMatchedStringsWindow>:
	name: "plainString"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Possible matches"

		ScrollView:
			bar_width: 6
			bar_color: [0.5, 0.5, 0.2, 0.7]

			BoxLayout:
				orientation: "vertical"
				size_hint_y: None
				size_hint_x: 1

				height: self.minimum_height

				Label:
					text: "beep"
					size_hint_y: None

				Label:
					text: "bap"
					size_hint_y: None

				Label:
					text: "boop"
					size_hint_y: None
		
		Button:
			text: "RETURN"
			on_release: app.root.current = "plainRes"