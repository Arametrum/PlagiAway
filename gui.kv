<ParSingleResultsWindow>:
	name: "parSingleRes"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Results per paragraph"
			size_hint_y: 0.25

		ScrollView:
			bar_width: 6
			bar_color: [0.5, 0.5, 0.2, 0.7]


			GridLayout:
				id: parSinRes
				size_hint_y: None
				height: self.minimum_height
				cols: 4
				spacing: [0, 0.2]


		AnchorLayout:
			anchor_x: "center"
			size_hint_y: 0.25

			Button:
				text: "RETURN"
				size_hint_x: 0.5
				on_release: app.root.current = "parFileRes"

