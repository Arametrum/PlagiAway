WindowManager:
	MainWindow:
	ModeSelectWindow:
	ParSusWindow:
	ParCompWindow:
	PlainSusWindow:
	PlainCompWindow:
	ParFileResultsWindow:
	PlainResultsWindow:
	ParSingleResultsWindow:
	ParMatchedStringsWindow:
	PlainMatchedStringsWindow:
	ParOffsetWindow:
	PlainOffsetWindow:
	ParSingleOffsetWindow:
	ParMatchedOffsetWindow:
	PlainMatchedOffsetWindow:

<MainWindow>:
	name: "main"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "PlagiAway"
			font_size: 32
			
		Button:
			text: "START"
			on_release: app.root.current = "modeSel"

<ModeSelectWindow>:
	name: "modeSel"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Choose mode"
			font_size: 32

		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "PLAIN"
				on_release: 
					root.plain()
					app.root.current = "plainSus"

			Button:
				text: "PARAGRAPH"
				on_release: 
					root.par()
					app.root.current = "parSus"

<ParSusWindow>:
	name: "parSus"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Drag your file onto the input field"

		BoxLayout:
			orientation: "horizontal"

			Label:
				text: "Suspect file"

			TextInput:
				id: parSusFile

		BoxLayout:
			orientation: "horizontal"

			Button:
				text: "SELECT"
				on_release: 
					root.select()

			Button:
				text: "RETURN"
				on_release: app.root.current = "modeSel"

